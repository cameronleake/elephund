<%- model_class = Contact -%>

	<div class="page-header">
  		<h1>Contact Us</h1>
	</div>

	<%= simple_form_for @contact, :html => { :class => 'form-horizontal' } do |f| %>
	
	<div class="controls">
		<p>Please drop us a line for any suggestions, issues, bugs or just to say hi!</p>
	</div>
	
	  	<%= f.input :name %>
	  	<%= f.input :email %>
	  	<%= f.input :subject, :input_html => { :style => "width:320px" } %>
	  	<%= f.input :body, as: :text, :label => "Message", :input_html => { :style => "width:320px", :rows => 12 } %>

  	<div class="form-actions">
   	<%= f.button :submit, :value => "Submit", :class => 'btn-primary' %>
  	</div>

<% end %>
