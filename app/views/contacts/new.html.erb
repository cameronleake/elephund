<%- model_class = Contact -%>

	<div class="page-header">
  		<h1>Contact Us</h1>
	</div>

	<%= simple_form_for @contact, :html => { :class => 'form-horizontal' } do |f| %>
	  <%= f.input :name %>
	  <%= f.input :email %>
	  <%= f.input :subject %>
	  <%= f.input :body, as: :text %>

  	<div class="form-actions">
    	<%= f.button :submit, :value => "Submit", :class => 'btn-primary' %>
  	</div>

<% end %>
