<div class="page-header">
	<h1>Log In</h1>
</div>
	
<%= form_tag sessions_path, { :method => :post, :class => "simple_form form-horizontal" } do %>

		<div class="control-group email required session_email">
			<label class="email required control-label" for="session_email">
				<abbr title="required">*</abbr> Email</label>
			<div class="controls">
				<input class="string email required" id="email" name="email" size="50" type="email" />
			</div>
		</div>
		
		<div class="control-group password required session_password">
			<label class="password required control-label" for="session_password">
				<abbr title="required">*</abbr> Password</label>
			<div class="controls">
				<input class="string password required" id="password" name="password" size="50" type="password" />
			</div>
		</div>
	
		<div class="control-group remember_me session_remember_me">
			<label class="remember_me control-label" for="remember_me">Remember Me</label>
			<div class="controls">
				<input class="boolean remember_me" id="remember_me" name="remember_me" value="1" type="checkbox" />
			</div>
		</div>
		
		<div class="controls">
			<p><%= link_to "Forgotten Password?", new_password_reset_path %></p>
		</div>
	
	  	<div class="form-actions">
	    	<%= submit_tag :submit, :value => "Log In", :class => 'btn btn-primary' %>
	  	</div>
		
<% end %>
